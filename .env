# Vector store (SQLite with embeddings) configuration
# Uses local SQLite database with sentence-transformers for embeddings
KB_VECTORSTORE_URL=sqlite:///./ai_safety_kb.db
KB_COLLECTION=ai_safety_docs

# Document store (optional - leave empty to use vector store for documents)
KB_DOCSTORE_URL=

# Safety evaluation model + credentials
SAFETY_EVAL_MODEL=anthropic/claude-3-opus
LITELLM_API_KEY=sk-your-api-key

# Interpretability assets
INTERP_MODEL_DIR=gpt2

# Logging + transport
LOG_LEVEL=INFO
MCP_TRANSPORT=stdio
MCP_PORT=8765

# Optional toggles
USE_KB_STUB=false
USE_EVAL_STUB=false
USE_INTERP_STUB=false

# Governance corpus path
GOVERNANCE_DOC_PATH=./data/governance_docs
